<UserControl x:Class="HMI_Alarm.Alarm_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HMI_Alarm"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,5" HorizontalAlignment="Right">
            <Button Background="White" FontWeight="Bold" Content="Acknowledge"
                    Padding="10,4"
                    Click="btn_Acknowledge_Click"/>
        </StackPanel>
        
        <DataGrid x:Name="AlarmDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  HeadersVisibility="Column"
                  RowHeight="28"
                  FontSize="14"
                  ItemsSource="{Binding Alarms}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="60"/>
                <DataGridTextColumn Header="Alarm Name" Binding="{Binding AlarmName}" Width="150"/>
                <DataGridTextColumn Header="Tagname" Binding="{Binding Source}" Width="300"/>
                <DataGridTextColumn Header="Status" Binding="{Binding State}" Width="200"/>
                <DataGridTextColumn Header="Date Time" Binding="{Binding DateTime}" Width="200"/>
                <DataGridTextColumn Header="Acknowledged By" Binding="{Binding AcknowledgedBy}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
