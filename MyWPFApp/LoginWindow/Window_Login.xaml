<Window x:Class="MyWPFApp.LoginWindow.Window_Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWPFApp.LoginWindow"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="WELCOME" FontSize="48" FontWeight="Bold" Foreground="Blue"
                   HorizontalAlignment="Center" Grid.Row="0" Margin="0,10,0,20"/>

        <!-- Username -->
        <TextBlock Text="User Name:" FontSize="24" FontWeight="Bold" Foreground="Blue" VerticalAlignment="Center" Grid.Row="1"/>
        <TextBox Name="txt_Username" FontSize="24" Width="600" Height="40" Grid.Row="1"
                 HorizontalAlignment="Right" VerticalContentAlignment="Center" TextAlignment="Left" Margin="0,0,5,0"
                 KeyDown="Input_KeyDown"/>

        <!-- Password -->
        <TextBlock Text="Password:" FontSize="24" FontWeight="Bold" Foreground="Blue" VerticalAlignment="Center" Grid.Row="3"/>
        <PasswordBox Name="pwd_Password" Width="600" Height="40" Grid.Row="3" Margin="0,0,5,0"
                     HorizontalAlignment="Right" VerticalContentAlignment="Center"
                     PasswordChanged="pwdPassword_PasswordChanged" KeyDown="Input_KeyDown"/>
        <TextBox Name="txt_Password" FontSize="24" Width="600" Height="40" Grid.Row="3" Margin="0,0,5,0"
                 HorizontalAlignment="Right" VerticalContentAlignment="Center" TextAlignment="Left" Visibility="Collapsed"/>

        <!-- Show Password Checkbox -->
        <CheckBox Content="Show Password" FontSize="24" Grid.Row="5" HorizontalAlignment="Right" Margin="0,5,10,0"
                  Checked="ShowPassword_Checked" Unchecked="ShowPassword_Checked" KeyDown="Input_KeyDown"/>

        <!-- Login Button -->
        <Button Content="Login" Width="500" Height="50" Grid.Row="7" Background="Blue" Foreground="White"
                FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"
                Click="Login_Click" IsDefault="True"/>
    </Grid>
</Window>
