<Window x:Class="TagManagement.Window_TagManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:TagManagement"
        mc:Ignorable="d"
        Title="Tag Management" Icon="/TagManagement;component/Resources/Tag_Table/TagManager.png" Height="600" Width="1200" Loaded="Window_Loaded" Closing="frm_TagManagement_Closing">
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open"/>
                <MenuItem Header="Save"/>
                <MenuItem Header="SaveAs"/>
                <Separator/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Name="mn_Building" Header="Add Building"/>
                <MenuItem Name="mn_Floor" Header="Add Floor"/>
                <MenuItem Name="mn_Room" Header="Add Room"/>
                <MenuItem Name="mn_Device" Header="Add Device"/>
                <MenuItem Name="mn_Tag" Header="Add Tag"/>
                <MenuItem Header="Remove Tag"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBarTray DockPanel.Dock="Top" Height="20">
            <ToolBar>
                <Button Width="30" Height="20" ToolTip="Open" Click="btn_Open_Click">
                    <Image Source="/TagManagement;component/Resources/Tag_Table/Open.png" Width="16"/>
                </Button>
                <Button Width="30" Height="20" ToolTip="Save" Click="btn_Save_Click">
                    <Image Source="/TagManagement;component/Resources/Tag_Table/Save.png" Width="16"/>
                </Button>
                <Button Width="30" Height="20" ToolTip="SaveAs" Click="btn_SaveAs_Click">
                    <Image Source="/TagManagement;component/Resources/Tag_Table/SaveAs.png" Width="16"/>
                </Button>
                <Button Width="30" Height="20" x:Name="btn_Building" ToolTip="Add Building" Click="btn_Building_Click">
                    <Image Source="/TagManagement;component/Resources/Tag_Building/Add_Building.png" Width="16"/>
                </Button>
                <Button Width="30" Height="20" x:Name="btn_Floor" ToolTip="Add Floor" Click="btn_Floor_Click">
                    <Image Source="/TagManagement;component/Resources/Tag_Building/Add_Floor.png" Width="16"/>
                </Button>
                <Button Width="30" Height="20" x:Name="btn_Room" ToolTip="Add Room" Click="btn_Room_Click">
                    <Image Source="/TagManagement;component/Resources/Tag_Building/Add_Room.png" Width="16"/>
                </Button>
                <Button Width="30" Height="20" x:Name="btn_Device" ToolTip="Add Device" Click="btn_Device_Click">
                    <Image Source="/TagManagement;component/Resources/Tag_Building/Add_Device.png" Width="16"/>
                </Button>
                <Button Width="30" Height="20" x:Name="btn_Tag" ToolTip="Add Tag" Click="btn_Tag_Click">
                    <Image Source="/TagManagement;component/Resources/Tag_Building/Add_Tag.png" Width="16"/>
                </Button>
                <Button Width="30" Height="20" ToolTip="Delete Tag" Click="btn_Delete_Click">
                    <Image Source="/TagManagement;component/Resources/Tag_Building/Delete_Tag.png" Width="16"/>
                </Button>
            </ToolBar>
        </ToolBarTray>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <!-- TreeView -->
                <ColumnDefinition Width="*"/>
                <!-- DataGrid -->
            </Grid.ColumnDefinitions>

            <!-- Left Panel: TreeView -->
            <TreeView Grid.Column="0" Name="treeView1" Margin="1"
                      SelectedItemChanged="treeView1_SelectedItemChanged"
                      PreviewMouseDown="treeView1_PreviewMouseDown"
                      MouseDoubleClick="treeView1_MouseDoubleClick">
                
                <TreeViewItem Header="All Tags" IsExpanded="True"/>
            </TreeView>

            <!-- Right Panel: ListView -->
            <ListView Name="listView1" Grid.Column="1" Margin="1" MouseDoubleClick="listView1_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Tag Name" Width="100" DisplayMemberBinding="{Binding TagName}"/>
                        <GridViewColumn Header="Topic" Width="300" DisplayMemberBinding="{Binding Topic}"/>
                        <GridViewColumn Header="Quality of Service" Width="150" DisplayMemberBinding="{Binding QoS}"/>
                        <GridViewColumn Header="Retain" Width="100" DisplayMemberBinding="{Binding Retain}"/>
                        <GridViewColumn Header="Description" Width="250" DisplayMemberBinding="{Binding Description}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </DockPanel>
</Window>
