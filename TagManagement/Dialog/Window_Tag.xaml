<Window x:Class="TagManagement.Dialog.Window_Tag"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:local="clr-namespace:TagManagement.Dialog"
         mc:Ignorable="d" 
         Title="Add Tag" Height="460" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Icon="/TagManagement;component/Resources/Tag_Table/TagManager.png" Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="TAG SETTING" FontSize="16" FontWeight="Bold" Foreground="Blue" 
                   HorizontalAlignment="Center" Margin="0,5,0,10"/>

        <!-- General Settings -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Labels & Data Display -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Floor:" VerticalAlignment="Center"/>
            <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1">
                <TextBlock Name="txt_FloorName" FontWeight="Bold"/>
            </Border>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Room:" VerticalAlignment="Center"/>
            <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1">
                <TextBlock Name="txt_RoomName" FontWeight="Bold"/>
            </Border>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Device:" VerticalAlignment="Center"/>
            <Border Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1">
                <TextBlock Name="txt_DeviceName" FontWeight="Bold"/>
            </Border>

            <TextBlock Grid.Row="6" Grid.Column="0" Text="Tag Name:" VerticalAlignment="Center"/>
            <TextBox Name="txt_TagName" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1"/>

            <TextBlock Grid.Row="8" Grid.Column="0" Text="Topic:" VerticalAlignment="Center"/>
            <TextBox Name="txt_Topic" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1"/>

            <TextBlock Grid.Row="10" Grid.Column="0" Text="QoS:" VerticalAlignment="Center"/>
            <ComboBox Name="cbox_QoS" Grid.Row="10" Grid.Column="1" Width="60" HorizontalAlignment="Left">
                <ComboBoxItem Content="0"/>
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
            </ComboBox>

            <TextBlock Grid.Row="10" Grid.Column="2" Text="Retain:" VerticalAlignment="Center"/>
            <CheckBox Name="check_Retain" Grid.Row="10" Grid.Column="3" Content="Retain" VerticalAlignment="Center"/>

            <TextBlock Grid.Row="12" Grid.Column="0" Text="Description:" VerticalAlignment="Top"/>
            <TextBox Name="txt_Description" Grid.Row="12" Grid.Column="1" Grid.ColumnSpan="3" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

            <!-- Error Display -->
            <TextBlock Name="txt_TagName_Error" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3" Foreground="Red" FontSize="12" />
            <TextBlock Name="txt_Topic_Error" Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="3" Foreground="Red" FontSize="12" />
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="btn_OK" Width="80" Height="30" Content="OK" Margin="5" Click="btn_OK_Click"/>
            <Button Name="btn_Cancel" Width="80" Height="30" Content="Cancel" Margin="5" Click="btn_Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
