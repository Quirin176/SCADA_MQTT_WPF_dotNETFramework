<Window x:Class="HMI_Tool.Faceplate.Faceplate_Light"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMI_Tool.Faceplate"
        xmlns:switches="clr-namespace:HMI_Tool.Switch"
        xmlns:textdisplays="clr-namespace:HMI_Tool.TextDisplay"
        mc:Ignorable="d"
        Title="Faceplate Light" Height="250" Width="300"
        WindowStartupLocation="CenterScreen" Loaded="Faceplate_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="CONTROL PANEL" FontSize="20" FontWeight="Bold" Foreground="ForestGreen"
                   Grid.Row="0" Grid.ColumnSpan="2"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBlock Text="SWITCH" FontSize="18" FontWeight="Bold" Foreground="Blue"
                   Grid.Row="1" Grid.ColumnSpan="2"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBlock Text="ON" FontSize="18" FontWeight="Bold" Foreground="Black"
                   Grid.Row="2" Grid.Column="1"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <switches:Switch x:Name="Switch1" TagName="{Binding SwitchTagName}"
                                   OnBackColor="LimeGreen" OffBackColor="LightCoral"
                                   Grid.Row="2" Grid.ColumnSpan="2" Width="80" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="OFF" FontSize="18" FontWeight="Bold" Foreground="Black"
                   Grid.Row="2" Grid.Column="0"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBlock Text="STATUS" FontSize="18" FontWeight="Bold" Foreground="Blue"
                   Grid.Row="4" Grid.ColumnSpan="2"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <textdisplays:TextDisplay x:Name="TextDisplay1" TagName="{Binding LightTagName}" BorderThickness="2" BorderBrush="Black"
                                    Grid.Row="5" Grid.ColumnSpan="2" Width="80" Height="40"
                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
