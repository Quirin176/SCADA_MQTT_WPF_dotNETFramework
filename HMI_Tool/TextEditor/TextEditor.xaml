<UserControl x:Class="HMI_Tool.TextEditor.TextEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HMI_Tool.TextEditor"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="80">
    <Border CornerRadius="5" BorderBrush="#CCC" BorderThickness="1" Padding="5">
        <TextBox x:Name="TextBox" Height="40" Width="80"
                 FontSize="22" Foreground="Blue" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"
                 KeyDown="TextBox_KeyDown"/>
    </Border>
</UserControl>
