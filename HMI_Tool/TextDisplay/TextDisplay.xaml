<UserControl x:Class="HMI_Tool.TextDisplay.TextDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HMI_Tool.TextDisplay"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="80">
    <Border CornerRadius="0" BorderBrush="#CCC" BorderThickness="1" Padding="5">
        <TextBlock Text="{Binding DisplayedText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    FontSize="22" Foreground="Blue" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Border>
</UserControl>
